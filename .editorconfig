# Thius file is for unifying the coding style for different editors and IDEs
# editorconfig.org 

# PHP PSR-2 Coding standards 
# https://www.php-fig.org/psr/psr-2/

root = true 

[*.php]
charset = utf-8
end_of_line = lf 
insert_final_newline = true
trim_trailing-whitespace = true 
indent_style = space 
indent_size = 4